<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <Spinner 
        android:id="@+id/value_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <TextView
        android:id="@+id/is_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="42sp"
        android:layout_toRightOf="@id/value_spinner"
        android:text="@string/is_string"
        />
    <Spinner 
        android:id="@+id/set_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/is_text"
        />
    <Button 
        android:id="@+id/and_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/set_spinner"
        android:text="@string/and_symbol"
        android:onClick="addAnother"
        android:textColor="@color/white"
        android:textSize="26sp"
        android:background="@drawable/button_shape"
        />

</RelativeLayout>
